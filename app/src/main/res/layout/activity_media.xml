<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMedia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Theme.DayNightScreen"
    tools:context=".ui.media.activity.MediaActivity">

    <ImageView
        android:id="@+id/ivBackToPrevScreen"
        style="@style/BackArrow"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvMediaHeader"
        style="@style/Header"
        android:layout_alignTop="@id/ivBackToPrevScreen"
        android:layout_alignBottom="@id/ivBackToPrevScreen"
        android:layout_toEndOf="@id/ivBackToPrevScreen"
        android:text="@string/media" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tlMediaScreenTabs"
        style="@style/MediaScreenTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivBackToPrevScreen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="@dimen/padding_dimen"
        app:tabTextAppearance="@style/CustomTabText"
        app:tabIndicatorFullWidth="true"
        android:contentDescription="@string/error" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpMediaScreen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero_dimen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/tlMediaScreenTabs" />

</RelativeLayout>