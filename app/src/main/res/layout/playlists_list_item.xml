<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPlaylistCover"
            android:layout_width="160dp"
            android:layout_height="160dp"
            tools:srcCompat="@drawable/song_cover_placeholder" />

        <TextView
            android:id="@+id/tvPlaylistTitle"
            style="@style/PlaylistItemCustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="Best song" />

        <TextView
            android:id="@+id/tvNumOfTracksInPlaylist"
            style="@style/PlaylistItemCustomText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:paddingEnd="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="100500 треков" />

    </LinearLayout>

</androidx.cardview.widget.CardView>