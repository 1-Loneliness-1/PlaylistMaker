<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yp_blue"
    android:paddingBottom="@dimen/padding_dimen"
    android:paddingHorizontal="@dimen/padding_dimen">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="top"
        android:text="@string/app_name_capitalize"
        android:textColor="@color/yp_white"
        android:textSize="@dimen/basic_text_size"
        android:fontFamily="@font/ys_display_medium"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/search_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/padding_dimen"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="@dimen/padding_dimen"
            android:text="@string/search"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/basic_text_size"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_medium"
            app:icon="@drawable/search"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/padding_dimen"
            android:backgroundTint="@color/yp_white"/>

        <Button
            android:id="@+id/media_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/padding_dimen"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="@dimen/padding_dimen"
            android:text="@string/media"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/basic_text_size"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_medium"
            app:icon="@drawable/media"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/padding_dimen"
            android:backgroundTint="@color/yp_white" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="@dimen/padding_dimen"
            android:text="@string/settings"
            android:textColor="@color/yp_black"
            android:textSize="@dimen/basic_text_size"
            android:textAllCaps="false"
            android:fontFamily="@font/ys_display_medium"
            app:icon="@drawable/settings"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/icon_padding"
            app:iconTint="@color/yp_black"
            app:cornerRadius="@dimen/padding_dimen"
            android:backgroundTint="@color/yp_white" />

    </LinearLayout>

</LinearLayout>