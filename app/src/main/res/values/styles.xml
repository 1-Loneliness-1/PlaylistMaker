<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dimen</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/padding_dimen</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="cornerRadius">@dimen/padding_dimen</item>
        <item name="backgroundTint">@color/yp_white</item>
        <item name="elevation">@dimen/zero_dimen</item>
    </style>
    <style name="SettingsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>
    <style name="Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsImageView" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/yp_black</item>
    </style>
    <style name="BottomMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/zero_dimen</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/bottom_menu_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="iconPadding">2dp</item>
    </style>
</resources>