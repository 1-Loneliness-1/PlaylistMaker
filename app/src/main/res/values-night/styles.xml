<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SettingsTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/padding_dimen</item>
        <item name="android:layout_marginEnd">@dimen/elem_padding</item>
        <item name="android:layout_marginTop">@dimen/point_in_setting_padding</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textFontWeight">400</item>
        <item name="drawableTint">@color/yp_white</item>
    </style>
    <style name="BackArrow" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/padding_dimen</item>
        <item name="android:layout_marginTop">@dimen/padding_dimen</item>
        <item name="android:src">@drawable/back_arrow</item>
        <item name="android:tint">@color/yp_white</item>
    </style>
    <style name="Header" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">@dimen/zero_dimen</item>
        <item name="android:textSize">@dimen/basic_text_size</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textFontWeight">500</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="BottomMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">@dimen/zero_dimen</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textSize">@dimen/bottom_menu_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">@color/yp_white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
        <item name="android:insetTop">8dp</item>
        <item name="android:insetBottom">8dp</item>
        <item name="iconPadding">2dp</item>
    </style>
    <style name="SearchElement" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/icon_padding</item>
        <item name="android:background">@drawable/background_for_search_edit_text</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:paddingHorizontal">@dimen/elem_padding</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:textColorHint">@color/yp_black</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/smaller_text_size</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="DayNightElement" parent="Theme.AppCompat.Light">
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="TrackListTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/yp_white</item>
    </style>
</resources>